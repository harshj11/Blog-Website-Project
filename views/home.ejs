<%- include("header") -%>

<div class="container">
    <h1 class="rendered__post__title">Home</h1>
    <p class="rendered__post__content"><%= homeStartingContent %></p>
</div>

<% postsToRender.forEach(post => { %>
    <div class="container">
        <h1 class="rendered__post__title"><%= post.title %></h1>
        <% if(post.truncatedContent === null) { %>
            <p class="rendered__post__content"><%= post.content %></p>
        <% } else { %>
            <p class="rendered__post__content"><%= post.truncatedContent %></p>
        <% } %>
    </div>
<% }); %>

<script src="/scripts/script.js"></script>